<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>About</title>
    <link rel="stylesheet" href="/css/main.css">
    <!-- Bootstrap & jQuery CDN -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Items</h2>
            <a href="/items/add" class="btn btn-success">Add Post</a>
        </div>
        <hr>

        <% if (message) { %>
            <div class="alert alert-warning">
                <%= message %>
            </div>
            <% } %>

                <% if (items.length> 0) { %>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Post Date</th>
                                    <th>Category Id</th>
                                    <th>Published</th>
                                    <th class="price-column">Price</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% items.forEach(item=> { %>
                                    <tr>
                                        <td>
                                            <%= item.title %>
                                        </td>
                                        <td>
                                            <%= new Date(item.postDate).toISOString().split('T')[0] %>
                                        </td>
                                        <td>
                                            <%= item.category %>
                                        </td>
                                        <td>
                                            <%= item.published ? 'Yes' : 'No' %>
                                        </td>
                                        <td class="price-column">$<%= item.price.toFixed(2) %>
                                        </td>
                                        <td class="text-end">
                                            <a href="/items/delete/<%= item.id %>" class="btn btn-danger btn-sm"
                                                onclick="return confirm('Are you sure you want to delete this item?');">
                                                remove
                                            </a>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>
                    <% } else { %>
                        <div class="alert alert-info">No items found. <a href="/items/add" class="alert-link">Add your
                                first post</a></div>
                        <% } %>
    </div>

    <script>
        document.querySelectorAll('.nav-link').forEach(link => {
            if (link.href === window.location.href) {
                link.classList.add('active');
                link.setAttribute('aria-current', 'page');
            }
        });
    </script>
</body>
</html>